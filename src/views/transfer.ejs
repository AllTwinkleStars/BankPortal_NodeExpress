<%- include('header'); -%>

<h1><%= title %></h1>

<span class="msg"><%= msg %></span>
<span class="error"></span>

<form id="transferForm" action="/transfer" method="POST">
  <span>Transfer From: </span> 
  <select name="from" id="from" required>
    <option value="checking">Checking</option>
    <option value="savings">Savings</option>
  </select>
  <span> to: </span>
  <select name="to" id="to" required>
    <option value="checking">Checking</option>
    <option value="savings">Savings</option>
  </select>
  <input type="number" name="amount" id="amount" required placeholder="amount">
  <button type="submit">Transfer</button>
</form>

<br>

<a href="/">Back to Accounts Summary</a>

<script type="text/javascript" src="js/transfer.js"></script>

<%- include('footer'); -%>